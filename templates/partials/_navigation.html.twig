{% set activeCurrentPage = 'active text-secondary fw-bold' %}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-4">
        <div class="container">
            <a class="navbar-brand text-uppercase fw-bold" href="{{ path('home') }}">Diconais</a>
            <button class="navbar-toggler" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarSupportedContent" 
                    aria-controls="navbarSupportedContent" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a  class="nav-link {% if current_page is defined and current_page == 'histoire' %}{{ activeCurrentPage }}{% endif %}" 
                            href="{{ path('ideogramme.history') }}">Histoire</a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link {% if current_page is defined and current_page == 'kanji' %}{{ activeCurrentPage }}{% endif %}" 
                            href="{{ path('ideogramme.list') }}">Les kanji</a>
                    </li>
                    <li class="nav-item">
                        <a  class="nav-link {% if current_page is defined and current_page == 'kana' %}{{ activeCurrentPage }}{% endif %}" 
                            href="{{ path('kana') }}">Les kana</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin') }}">admin</a>
                        </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                    {% endif %}
                </ul>
                </div>
        </div>
    </nav>

    <div class="banner bg-primary text-white d-flex align-items-center">
        <div class="container">
            {% if page_title is defined %}
                <h1 class="mb-0 text-uppercase fw-bold">{{ page_title }}</h1>
                {% else %}
                <div class="d-flex">
                    <span class="flex-shrink-0 h1">{{ logo }}</span>
                    <span class="flex-grow-1 ms-5 h1">{{ signification }}</span>
                </div>
            {% endif %}
        </div>
    </div>

</header>